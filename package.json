{
  "name": "eckwms",
  "version": "1.0.0",
  "description": "WMS project for e-commerce and service centers",
  "main": "src/server/local/server.js",
  "scripts": {
    "start:local": "node src/server/local/server.js",
    "dev:local": "nodemon src/server/local/server.js",
    "build": "webpack --mode production",
    "watch": "webpack --watch --mode development",
    "generate:id": "node scripts/generate-instance-id.js",
    "db:dump": "dotenv -- bash -c 'PGPASSWORD=$PG_PASSWORD pg_dump -U $PG_USERNAME -h $PG_HOST -d $PG_DATABASE --no-owner --no-privileges --exclude-schema=support_graph | gzip > eckwms_backup_$(date +%Y-%m-%d_%H-%M).sql.gz'"
  },

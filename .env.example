# Node environment
NODE_ENV=development
PORT=3100

# Google OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret


# Encryption and security
ENC_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# PostgreSQL database configuration
PG_DATABASE=eckwms
PG_USERNAME=wms_user
PG_PASSWORD=secure_password_here
PG_HOST=localhost
PG_PORT=5432
DB_ALTER=false

# Language and translation configuration
DEFAULT_LANGUAGE=en
TRANSLATION_DOMAIN=for a warehouse management system
# OpenAI API key for translation
OPENAI_API_KEY=your_openai_api_key

# Server Ports
LOCAL_SERVER_PORT=3100
GLOBAL_SERVER_PORT=8080

# Public URL for QR Code Generation
GLOBAL_SERVER_URL=https://your-global-server-domain.com

# Note: LOCAL_SERVER_INTERNAL_URL is no longer needed
# The server now dynamically detects its local network IP addresses for device pairing

# Global Server Sync Configuration
GLOBAL_SERVER_API_ENDPOINT=https://your-global-server-domain.com/api/internal/sync
GLOBAL_SERVER_API_KEY=a_super_secret_key_for_internal_sync

# Server Asymmetric Keys (generate with 'node scripts/generate-keys.js')
SERVER_PUBLIC_KEY=
SERVER_PRIVATE_KEY=

# Unique Instance ID (generate with 'npm run generate:id')
INSTANCE_ID=

# Global Server Registration Endpoint
GLOBAL_SERVER_REGISTER_URL=https://your-global-server-domain.com/ECK/api/internal/register-instance

# Google Sheets Integration
# ID from the URL of your Google Sheet
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
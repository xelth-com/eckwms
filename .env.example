# Node environment
NODE_ENV=development
PORT=3000

# Google OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret


# Encryption and security
ENC_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# PostgreSQL database configuration
PG_DATABASE=eckwms
PG_USERNAME=wms_user
PG_PASSWORD=secure_password_here
PG_HOST=localhost
PG_PORT=5432
DB_ALTER=false

# Language and translation configuration
DEFAULT_LANGUAGE=en
TRANSLATION_DOMAIN=for a warehouse management system
# OpenAI API key for translation
OPENAI_API_KEY=your_openai_api_key

# Server Ports
LOCAL_SERVER_PORT=3000
GLOBAL_SERVER_PORT=8080

# Public URL for QR Code Generation
GLOBAL_SERVER_URL=http://localhost:8080

# Internal URL for Global Server to connect to Local Server
LOCAL_SERVER_INTERNAL_URL=http://localhost:3000
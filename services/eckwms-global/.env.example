# eckWMS Global Server - Environment Configuration
# Copy this file to .env and fill in your values

# === Service Configuration ===
NODE_ENV=development
PORT=8080

# === Authentication ===
# Internal API key for service-to-service communication
GLOBAL_SERVER_API_KEY=change_me_in_production

# === Database Configuration ===
# PostgreSQL connection details
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=eckwms_global
PG_USERNAME=eckwms_user
PG_PASSWORD=secure_password_change_this

# Enable SQL query logging (development only)
DB_LOGGING=false

# === Encryption ===
# Encryption key for QR code decryption (must match main app if shared)
# Generate with: openssl enc -aes-192-cbc -S $(xxd -p -l 8 /dev/urandom) -P <<< ""
ENC_KEY=your_aes_192_encryption_key_in_hex

# === Service URLs ===
# Main application URL (if using API gateway pattern)
MAIN_APP_URL=http://localhost:3000
MAIN_APP_API_KEY=internal_api_key_if_using_api_gateway

# Global server public URL (used in connection candidates)
GLOBAL_SERVER_URL=https://pda.repair

# Local instance default port
LOCAL_SERVER_PORT=3000

# === Logging ===
LOG_LEVEL=info
# Possible values: debug, info, warn, error

# === Development ===
# Whether to allow CORS for development
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Database alter on sync (development only - DANGEROUS in production!)
DB_ALTER=false
